# Dockerfile para desarrollo con hot reload
FROM node:18-alpine

# Instalar dependencias del sistema
RUN apk add --no-cache postgresql-client curl

WORKDIR /app

# Copiar archivos de configuración
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./

# Instalar dependencias (incluyendo devDependencies para desarrollo)
RUN npm install

# Crear directorios necesarios con permisos correctos
RUN mkdir -p /app/dist
RUN mkdir -p /app/src

# Cambiar permisos del directorio de trabajo
RUN chmod -R 755 /app

# Exponer puerto para la aplicación y debugging
EXPOSE 3001 9229

# Comando por defecto (puede ser sobrescrito)
CMD ["npm", "run", "start:debug"]
