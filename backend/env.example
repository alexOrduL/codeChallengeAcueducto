# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=palindrome_user
DB_PASSWORD=palindrome_password
DB_DATABASE=palindrome_db

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Security & Rate Limiting
# Rate limiting - tiempo en segundos
THROTTLE_TTL=60
# Rate limiting - requests generales por TTL
THROTTLE_LIMIT=100
# Rate limiting - búsquedas específicas por TTL
THROTTLE_SEARCH_LIMIT=30

# Logging Level (optional)
LOG_LEVEL=info

# JWT Configuration (para futuras implementaciones)
# JWT_SECRET=your-super-secret-jwt-key-here
# JWT_EXPIRES_IN=1h

# API Configuration
API_VERSION=v1

# Health Check Configuration (optional)
HEALTH_CHECK_ENABLED=true
