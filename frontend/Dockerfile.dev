# Dockerfile para desarrollo con hot reload
FROM node:18-alpine

# Instalar dependencias del sistema
RUN apk add --no-cache libc6-compat curl

WORKDIR /app

# Copiar archivos de configuración
COPY package*.json ./
COPY next.config.js ./
COPY tailwind.config.js ./
COPY postcss.config.js ./
COPY tsconfig.json ./

# Instalar dependencias (incluyendo devDependencies para desarrollo)
# Usar npm install para desarrollo y limpiar caché después
RUN npm install && npm cache clean --force

# Crear directorios necesarios con permisos correctos
RUN mkdir -p /app/.next
RUN mkdir -p /app/src
RUN mkdir -p /app/public

# Cambiar permisos del directorio de trabajo
RUN chmod -R 755 /app

# Exponer puerto
EXPOSE 3000

# Comando por defecto para desarrollo
CMD ["npm", "run", "dev"]
